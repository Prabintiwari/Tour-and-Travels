{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/templets/userEmailTemplet/WelcomeEmail.ts",
    "src/templets/userEmailTemplet/registration_otp.ts",
    "src/utils/rateLimiter.ts",
    "src/config/cloudinary.ts",
    "src/config/prisma.ts",
    "src/templets/userEmailTemplet"
  ],
  "exclude": ["node_modules"]
}
